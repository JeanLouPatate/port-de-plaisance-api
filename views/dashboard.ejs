<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8" />
    <title>Tableau de bord - Port de Plaisance</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        nav ul {
            list-style: none;
            padding: 0;
            display: flex;
            gap: 15px;
            background: #f0f0f0;
            margin-bottom: 20px;
            border-radius: 5px;
        }
        nav ul li {
            display: inline;
        }
        nav ul li a {
            text-decoration: none;
            padding: 10px 15px;
            color: #333;
            border-radius: 4px;
        }
        nav ul li a:hover {
            background-color: #007BFF;
            color: white;
        }
        table {
            border-collapse: collapse;
            width: 100%;
            max-width: 900px;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 8px 12px;
            text-align: left;
        }
        th {
            background-color: #007BFF;
            color: white;
        }
        caption {
            margin-bottom: 10px;
            font-weight: bold;
            font-size: 1.2em;
        }
        #refresh-btn {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.2em;
            vertical-align: middle;
            margin-left: 10px;
            color: #007BFF;
        }
        #refresh-btn:hover {
            color: #0056b3;
        }
    </style>
</head>

<body>
    <nav>
        <ul>
            <li><a href="/">Accueil</a></li>
            <li><a href="/catways">Catways</a></li>
            <li><a href="/reservations">R√©servations</a></li>
            <li><a href="/users">Utilisateurs</a></li>
            <li><a href="/docs">Documentation API</a></li>
            <li><a href="/logout">Se d√©connecter</a></li>
        </ul>
    </nav>

    <h1>Bienvenue <%= username %> !</h1>
    <p>Email : <%= email %></p>
    <p>Date du jour : <%= currentDate %></p>

    <h2>
      R√©servations en cours
      <button id="refresh-btn" title="Rafra√Æchir">üîÑ</button>
    </h2>

    <div id="reservations-container">
      <!-- Le tableau sera inject√© ici -->
    </div>

    <script>
      async function fetchReservations() {
        try {
          const response = await fetch('/api/reservations');
          if (!response.ok) throw new Error('Erreur lors du chargement des r√©servations');

          const reservations = await response.json();

          const container = document.getElementById('reservations-container');

          if (!reservations.length) {
            container.innerHTML = '<p>Aucune r√©servation en cours.</p>';
            return;
          }

          let html = `
            <table>
              <caption>Liste des r√©servations valides</caption>
              <thead>
                <tr>
                  <th>Catway num√©ro</th>
                  <th>Client</th>
                  <th>Bateau</th>
                  <th>D√©but</th>
                  <th>Fin</th>
                </tr>
              </thead>
              <tbody>
          `;

          reservations.forEach(r => {
            const startDate = new Date(r.startDate).toLocaleDateString();
            const endDate = new Date(r.endDate).toLocaleDateString();

            html += `
              <tr>
                <td>${r.catwayNumber}</td>
                <td>${r.clientName}</td>
                <td>${r.boatName}</td>
                <td>${startDate}</td>
                <td>${endDate}</td>
              </tr>
            `;
          });

          html += '</tbody></table>';

          container.innerHTML = html;

        } catch (error) {
          console.error('Erreur:', error);
          document.getElementById('reservations-container').innerHTML = '<p>Erreur lors du chargement des r√©servations.</p>';
        }
      }

      // Chargement initial au chargement de la page
      fetchReservations();

      // √âv√©nement clic sur le bouton rafra√Æchir
      document.getElementById('refresh-btn').addEventListener('click', fetchReservations);
    </script>
</body>

</html>
